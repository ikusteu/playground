{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "",
    "outDir": "dist",
    "target": "es5",
    "module": "CommonJS",
    "lib": ["es6", "esnext.asynciterable"],
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "isolatedModules": true,
    "allowJs": true,
    "noEmit": true
  },
  "include": ["src"]
}
